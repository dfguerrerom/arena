  "name": "OpenForisArena",
  "engines": {
    "node": ">=9.7.1",
    "yarn": ">=1.3.2"
  },
  "scripts": {
    "build": "webpack -p --config webpack.config.js",
    "build:watch": "webpack --config webpack.config.js --watch",
    "clean": "rm -rf dist/",
    "start": "node server/server.js",
    "postinstall": "webpack --config webpack.config.js",
    "watch": "yarn build:watch & yarn watch:server",
    "watch:server": "NODE_ENV=development nodemon -e js --watch server server/server.js",
    "create-migration": "./server/db/migration/create-migration.sh",
    "test": "mocha-webpack --webpack-config webpack.config-test.js -R spec test/unit"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.4.1",
    "optimize-css-assets-webpack-plugin": "^4.0.3",
    "uglifyjs-webpack-plugin": "^1.2.7",
    "webpack": "^4.14.0",
    "webpack-cli": "^3.0.8",
    "webpack-dev-server": "^3.1.4"
  },
  "dependencies": {
    "db-migrate": "^0.11.1",
    "dotenv": "^6.0.0",
    "pg-promise": "^8.4.4",
    "react": "^16.4.1",
    "uuidv4": "^1.0.1"
  },
  "browserslist": [
    "last 2 versions"
  ]
